{
  "name": "cao-vscode",
  "displayName": "CLI Agent Orchestrator",
  "description": "Visual interface for managing multi-agent orchestration with CAO",
  "version": "0.1.0",
  "publisher": "aws",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cao.openDashboard",
    "onView:cao.sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cao.openDashboard",
        "title": "Open CAO Dashboard",
        "category": "CAO"
      },
      {
        "command": "cao.launchAgent",
        "title": "Launch Agent",
        "category": "CAO"
      },
      {
        "command": "cao.createSession",
        "title": "Create Session",
        "category": "CAO"
      },
      {
        "command": "cao.refreshSessions",
        "title": "Refresh Sessions",
        "category": "CAO",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cao-sidebar",
          "title": "CLI Agent Orchestrator",
          "icon": "resources/cao-icon.svg"
        }
      ]
    },
    "views": {
      "cao-sidebar": [
        {
          "id": "cao.sidebar",
          "name": "Sessions",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "CLI Agent Orchestrator",
      "properties": {
        "cao.serverUrl": {
          "type": "string",
          "default": "http://localhost:9889",
          "description": "URL of the CAO API server"
        },
        "cao.autoRefreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval in milliseconds (0 to disable)"
        },
        "cao.defaultProvider": {
          "type": "string",
          "default": "q_cli",
          "enum": ["q_cli", "claude_code"],
          "description": "Default provider for new terminals"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
